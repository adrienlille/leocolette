

  <!-- PROCESS SECTION -->
<section class="clearfix processSection">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="processArea">
          <ul class="list-inline">
            <li>
              <h2><%= @order.booking.apartment.name %></h2>
              <%= cl_image_tag(@order.booking.apartment.photo, width: 300, height: 200, gravity: :face, crop: :fill) %>
            </li>
            <li>
              <h2>Your Purchase</h2>
              <h3><%= @order.booking.days %> nights x â‚¬6</h3>
              <%= form_tag order_payments_path(@order) do %>
              <p>
                <article>
                  <label class="amount">
                    <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
                  </label>
                </article>
                 <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-name="Your Booking"
                  data-email="<%= current_user.email %>"
                  data-description="Order # <%= @order.id %>"
                  data-amount="<%= @order.amount_cents %>"
                  data-currency="<%= @order.amount.currency %>"></script>
                  <% end %>
              </p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>




