<%= link_to conversation_messages_path(conversation) do %>
<li class="messageCommon <%= message.readclass %> listWrapper">
  <span class="messageInfo">
    <h5><%= message&.user&.profile&.first_name %>, <small><%= message&.date%> <span class="dayTime"><%= message&.time %></span></small></h5>
    <p><%= message&.body %></p>
  </span>
  <span class="messageTime"></span>
</li>
<% end %>
