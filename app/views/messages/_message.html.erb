<div class="message">
  <%= cl_image_tag(message.user.profile.photo, class: "avatar-large", height: 50, width: 50, gravity: :face, crop: :fill) %>
  <div class="message-name">
    <h3><%= message.user.profile.first_name %></h3>
    <p style="margin-bottom: 0px"><%= message.full_time %></p>
  </div>
  <div class="message-body">
    <p>
      <%= message.body %>
    </p>
  </div>
</div>
