<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path apartment.photo, height: 300, width: 400, crop: :fill %>');">
  <div class="card-category"><%= apartment.city %></div>
  <div class="card-description">
    <h2><%= apartment.name %></h2>
    <p><%= apartment.description %></p>
  </div>
  <img class="card-user" src="<%= apartment.user.profile.photo %>">
  <a class="card-link" href="<%= apartment_path(apartment) %>" ></a>
</div>

