<div class="media media-comment">
  <div class="media-left">
  <%= cl_image_tag(review.user.profile.photo, class: "media-object img-circle", width: 80, height: 80, gravity: :face, crop: :fill) %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= review.user.profile.first_name %></h4>
    <ul class="list-inline rating">
      <% review&.score&.times do %>
        <li><i class="fa fa-star" aria-hidden="true"></i></li>
      <% end %>
      <% if review.score %>
        <% n = 5 - review.score%>
        <% n.times do %>
          <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
        <% end %>
      <% end %>
    </ul>
    <p><%= review.text %></p>
  </div>
</div>
