

<!-- LOGIN SECTION -->
<section class="clearfix loginSection">
  <div class="container">
    <div class="row">
      <div class="center-block col-md-5 col-sm-6 col-xs-12">
        <div class="panel panel-default loginPanel">
          <div class="panel-heading text-center">Members log in</div>
          <div class="panel-body">
            <form class="loginForm" action="/users/sign_in" accept-charset="UTF-8" method="post">
              <div class="form-group">
                <label for="email">E-mail *</label>
                <input type="email" class="form-control" name="user[email]" id="user_email">
                <p class="help-block">Enter your Foundation username.</p>
              </div>
              <div class="form-group">
                <label for="password">Password *</label>
                <input type="password" class="form-control" name="user[password]" id="user_password">
                <p class="help-block">Enter the password that accompanies your username.</p>
              </div>
              <div class="form-group">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                <button type="submit" class="btn btn-primary pull-left">Log In</button>
                <a href="<%= new_user_password_path %>" class="pull-right link">Fogot Password?</a>
              </div>
            </form>
          </div>
          <div class="panel-footer text-center">
            <p>Not a member yet? <a href="<%= new_user_registration_path %>" class="link">Sign up</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= render "devise/shared/links" %>
