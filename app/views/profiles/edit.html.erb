

<!-- DASHBOARD PROFILE SECTION -->
<section class="clearfix bg-dark profileSection">
  <%= simple_form_for @profile do |f| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-sm-5 col-xs-12">
          <div class="dashboardBoxBg mb30">
            <div class="profileImage">
             <% if current_user.profile %>
                <% if current_user.profile.photo? %>
                  <%= cl_image_tag current_user.profile.photo.path, width: 50, height: 50, crop: :fill, class: "img-circle" %>
                  <% else %>
                    <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/a/ad/Placeholder_no_text.svg", class: "img-circle" %>
                <% end %>
              <% end %>
              <div class="file-upload profileImageUpload">
                <div class="upload-area">
                  <label for="upload" class="file-upload__label">Upload a Picture <i class="icon-listy icon-upload"></i></label>
                  <input id="upload" class="file-upload__input" type="file" name="profile[photo]">
                  <%= f.hidden_field :photo_cache, as: :hidden %>
                </div>
              </div>
            </div>
            <!-- <div class="profileUserInfo bt profileName">
              <p>Your Current Plan</p>
              <h2>Platinum Package</h2>
              <h5>Next Payment: <span>15/01/2017</span></h5>
              <a href="#" class="btn btn-primary">Change</a>
            </div> -->
          </div>
        </div>
        <div class="col-md-8 col-sm-7 col-xs-12">
          <form>
            <div class="dashboardBoxBg">
              <div class="profileIntro">
                <h2>Your Profile</h2>
                <p>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form Ipsum available.</p>
              </div>
            </div>
            <div class="dashboardBoxBg mt30">
              <div class="profileIntro">
                <h3>About You</h3>
                <div class="row">
                  <div class="form-group col-xs-12">
                    <%= f.radio_button :gender, "M"%>
                    <%= f.label :gender_M, "Male" %>
                    <%= f.radio_button :gender, "F" %>
                    <%= f.label :gender_F, "Female" %>
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <%= f.input :first_name, label: 'First name', error: 'Username is mandatory, please specify one' %>
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <%= f.input :last_name, label: 'Last name', error: 'Last name is mandatory, please specify one'  %>
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <%= f.input :city, label: 'City', error: 'City is mandatory, please specify one'%>
                  </div>
                  <div class="form-group col-sm-6 col-xs-12">
                    <%= f.input :postal_code, label: 'Postal Code', error: 'Postal code is mandatory, please specify one'%>
                  </div>
                  <div class="form-group col-xs-12">
                    <label for="aboutYou">About Me</label>
                    <%= f.text_area :about_me, rows: "5", class: "form-control" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="btn-area mt30">
              <%= f.submit class: "btn btn-primary", value: "Save Change"%>
            </div>
